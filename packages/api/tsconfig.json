{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["esnext", "webworker"],
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "paths": {
      "$modules/*": ["./src/modules/*"],
      "$schemas/*": ["./src/modules/schemas/*"]
    }
  },
  "exclude": ["dist"]
}
